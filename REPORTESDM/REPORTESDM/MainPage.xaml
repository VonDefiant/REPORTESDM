<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuAppXamarin.MainPage">

    <ContentPage.BackgroundImageSource>
        <FileImageSource File="background.png" />
    </ContentPage.BackgroundImageSource>

    <StackLayout VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" Padding="20">
        <Image Source="logo.png" Aspect="AspectFit" WidthRequest="250" HeightRequest="200"/>
        <DatePicker x:Name="FechaDatePicker"></DatePicker>
        <Button Text="Generar" Clicked="OnGenerarButtonClicked"></Button>
        <Label x:Name="DataLabel" FontSize="15" HorizontalTextAlignment="Start" VerticalTextAlignment="Start" />
        <Label x:Name="ErrorLabel" TextColor="Red" FontSize="16" HeightRequest="100" />
    </StackLayout>

</ContentPage>
